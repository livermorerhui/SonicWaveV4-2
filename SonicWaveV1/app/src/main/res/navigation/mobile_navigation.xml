    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.sonicwavev1.ui.home.HomeFragment"
        android:label="自选设置"
        app:layout="@layout/fragment_home" />

    <!-- Optional: Add other fragments for additional BottomNavigationView items -->
