    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.sonicwavev1.ui.dashboard.DashboardFragment"
        android:label="预定设置"
        app:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.sonicwavev1.ui.notifications.NotificationsFragment"
