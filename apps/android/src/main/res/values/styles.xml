<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/grow_from_top_right</item>
        <item name="android:windowExitAnimation">@anim/shrink_to_top_right</item>
    </style>

    <!-- 轮子式 DatePickerDialog 专用主题 -->
    <style name="SpinnerDatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- 强制 DatePicker 使用 spinner 模式，而不是日历 -->
        <item name="android:datePickerStyle">@style/SpinnerDatePickerStyle</item>
    </style>

    <!-- 轮子式 DatePicker 样式 -->
    <style name="SpinnerDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="Widget.SonicWave.PresetModeButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_preset_mode_button_default</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/color_preset_mode_button_text</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
