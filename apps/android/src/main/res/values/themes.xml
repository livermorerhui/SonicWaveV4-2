<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SonicWaveD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#01E4BA</item>
        <item name="colorPrimaryVariant">#96E4BA</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- 当状态栏背景颜色是浅色时，将此项设置为 true，使状态栏图标变为深色 -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Disable global button tint so per-view background shows exactly as defined -->
        <item name="android:buttonStyle">@style/ButtonNoTint</item>

    </style>

    <style name="Theme.SonicWaveD.Splash" parent="Theme.SonicWaveD">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="windowSplashScreenBackground">@drawable/splash_screen_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.SonicWaveD</item>
    </style>
</resources>
