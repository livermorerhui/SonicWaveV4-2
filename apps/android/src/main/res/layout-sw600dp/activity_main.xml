<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- 顶部工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#01E4BA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar" />

    <!-- 主要内容布局 Main Content Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- === 区域分割线 Guidelines === -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_divider_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="720dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_divider_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />

        <!-- === 左侧栏布局 === -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/inner_nav_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="120dp" />


        <!-- === 左上角区域 === -->
            <!-- === 左侧栏上部分 === -->
        <LinearLayout
            android:id="@+id/nav_rail_top_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:background="?attr/colorSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_divider_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/inner_nav_guideline">
        </LinearLayout>

            <!-- === 左上角区域：自选、预定设置 === -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment_activity_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@id/horizontal_divider_guideline"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintStart_toEndOf="@+id/inner_nav_guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/mobile_navigation" />

        <!-- === 左下角区域 === -->
            <!-- === 左侧栏下部分 === -->
        <LinearLayout
            android:id="@+id/nav_rail_bottom_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:background="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_divider_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/inner_nav_guideline">
        </LinearLayout>

            <!-- === 左下角区域：音乐 === -->
        <include
            android:id="@+id/fragment_bottom_left"
            layout="@layout/layout_mini_music_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/horizontal_divider_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/inner_nav_guideline"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline" />


        <!-- === 右区域：登录 === -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_right_main"
            android:name="com.example.sonicwavev4.ui.login.LoginFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/vertical_divider_guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 固定分隔线：垂直灰线 -->
        <View
            android:id="@+id/vertical_divider"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            android:clickable="false"
            android:focusable="false"
            android:longClickable="false"
            android:importantForAccessibility="no"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintEnd_toEndOf="@id/vertical_divider_guideline" />

        <!-- 固定分隔线：水平灰线 -->
        <View
            android:id="@+id/horizontal_divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:clickable="false"
            android:focusable="false"
            android:longClickable="false"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toEndOf="@id/inner_nav_guideline"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintTop_toTopOf="@id/horizontal_divider_guideline"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_divider_guideline" />

        <!-- 左侧竖向分隔线 -->

        <!-- 左侧水平分隔线 -->
        <View
            android:id="@+id/left_vertical_divider"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="no"
            android:longClickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/inner_nav_guideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/inner_nav_guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/left_horizontal_divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:clickable="false"
            android:focusable="false"
            android:longClickable="false"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/inner_nav_guideline"
            app:layout_constraintTop_toTopOf="@id/horizontal_divider_guideline"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_divider_guideline" />

        <!-- 左侧顶部水平线 -->
        <!-- 左侧底部水平线 -->
        <View
            android:id="@+id/left_bottom_horizontal_divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:clickable="false"
            android:focusable="false"
            android:longClickable="false"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/inner_nav_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_rail_bottom_section" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
