<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_keypad_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_keypad"
        android:layout_width="200dp"
        android:layout_height="270dp"
        app:constraint_referenced_ids="btn_key_7, btn_key_8, btn_key_9,
                                       btn_key_4, btn_key_5, btn_key_6,
                                       btn_key_1, btn_key_2, btn_key_3,
                                       btn_key_clear, btn_key_0, btn_key_enter"
        app:flow_horizontalStyle="spread_inside"
        app:flow_maxElementsWrap="3"
        app:flow_verticalStyle="spread_inside"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_key_7"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="7"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_8"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="8"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_9"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="9"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_4"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="4"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_5"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="5"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_6"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="6"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_1"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="1"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_2"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="2"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_3"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="3"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_0"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="0"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_clear"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:text="C"
        android:background="@drawable/bg_keypad_red"
        android:backgroundTint="@null"
        android:textColor="#FFFFFF" />
    <ImageButton
        android:id="@+id/btn_key_enter"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:src="@drawable/ic_return_key_white"
        android:contentDescription="输入"
        android:scaleType="fitCenter"
        android:background="@drawable/bg_keypad_green"
        android:backgroundTint="@null"
        app:tint="#FFFFFF" />

    <!-- 平板端：软降“恢复”按钮默认占位，避免显示/隐藏导致 keypad 位置变化 -->
    <Button
        android:id="@+id/btn_soft_resume_inline"
        style="@style/KeypadButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/soft_resume"
        android:background="@drawable/bg_keypad_green"
        android:backgroundTint="@null"
        android:textColor="@color/black"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/flow_keypad"
        app:layout_constraintStart_toStartOf="@+id/flow_keypad"
        app:layout_constraintTop_toBottomOf="@id/flow_keypad" />

</androidx.constraintlayout.widget.ConstraintLayout>
