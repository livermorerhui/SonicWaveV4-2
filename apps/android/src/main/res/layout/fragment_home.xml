<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.HomeFragment">

    <!-- Guideline remains the same, it's our flexible divider -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />


    <!-- ====================================================== -->
    <!-- ===   [OPTIMIZED] Left Side: Parameter Controls    === -->
    <!-- ====================================================== -->

    <!-- 1. Frequency Control Group -->
    <TextView
        android:id="@+id/tv_label_frequency"
        style="@style/ParameterLabel"
        android:text="@string/label_frequency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toStartOf="@+id/btn_frequency_down" />

    <ImageButton
        android:id="@+id/btn_frequency_down"
        style="@style/ParameterButton.Minus"
        android:contentDescription="@string/cd_frequency_decrease"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_label_frequency"
        app:layout_constraintBottom_toBottomOf="@id/tv_label_frequency"
        app:layout_constraintStart_toEndOf="@+id/barrier_labels"
        app:layout_constraintEnd_toStartOf="@+id/tv_frequency_value"/>

    <TextView
        android:id="@+id/tv_frequency_value"
        style="@style/ParameterDisplay"
        android:text="0 Hz"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="@id/btn_frequency_down"
        app:layout_constraintBottom_toBottomOf="@id/btn_frequency_down"
        app:layout_constraintStart_toEndOf="@+id/btn_frequency_down"
        app:layout_constraintEnd_toStartOf="@+id/btn_frequency_up"
        app:layout_constrainedWidth="true"/> <!-- Allow text to wrap if squished -->

    <ImageButton
        android:id="@+id/btn_frequency_up"
        style="@style/ParameterButton.Plus"
        android:contentDescription="@string/cd_frequency_increase"
        app:layout_constraintTop_toTopOf="@id/tv_frequency_value"
        app:layout_constraintBottom_toBottomOf="@id/tv_frequency_value"
        app:layout_constraintStart_toEndOf="@+id/tv_frequency_value"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical"
        android:layout_marginEnd="8dp"/>

    <!-- Barrier ensures all minus buttons align vertically after the longest label -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="tv_label_frequency, tv_label_intensity, tv_label_time" />


    <!-- 2. Intensity Control Group (follows the same pattern) -->
    <TextView
        android:id="@+id/tv_label_intensity"
        style="@style/ParameterLabel"
        android:text="@string/label_intensity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_frequency"
        android:layout_marginTop="24dp"/>

    <ImageButton
        android:id="@+id/btn_intensity_down"
        style="@style/ParameterButton.Minus"
        android:contentDescription="@string/cd_intensity_decrease"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_label_intensity"
        app:layout_constraintBottom_toBottomOf="@id/tv_label_intensity"
        app:layout_constraintStart_toEndOf="@+id/barrier_labels"
        app:layout_constraintEnd_toStartOf="@+id/tv_intensity_value"/>

    <TextView
        android:id="@+id/tv_intensity_value"
        style="@style/ParameterDisplay"
        android:text="0"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="@id/btn_intensity_down"
        app:layout_constraintBottom_toBottomOf="@id/btn_intensity_down"
        app:layout_constraintStart_toEndOf="@+id/btn_intensity_down"
        app:layout_constraintEnd_toStartOf="@+id/btn_intensity_up"
        app:layout_constrainedWidth="true"/>

    <ImageButton
        android:id="@+id/btn_intensity_up"
        style="@style/ParameterButton.Plus"
        android:contentDescription="@string/cd_intensity_increase"
        app:layout_constraintTop_toTopOf="@id/tv_intensity_value"
        app:layout_constraintBottom_toBottomOf="@id/tv_intensity_value"
        app:layout_constraintStart_toEndOf="@+id/tv_intensity_value"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical"
        android:layout_marginEnd="8dp"/>


    <!-- 3. Time Control Group -->
    <TextView
        android:id="@+id/tv_label_time"
        style="@style/ParameterLabel"
        android:text="@string/label_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_intensity"
        android:layout_marginTop="24dp"/>

    <ImageButton
        android:id="@+id/btn_time_down"
        style="@style/ParameterButton.Minus"
        android:contentDescription="@string/cd_time_decrease"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_label_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_label_time"
        app:layout_constraintStart_toEndOf="@+id/barrier_labels"
        app:layout_constraintEnd_toStartOf="@+id/tv_time_value"/>

    <TextView
        android:id="@+id/tv_time_value"
        style="@style/ParameterDisplay"
        android:text="0 分钟"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="@id/btn_time_down"
        app:layout_constraintBottom_toBottomOf="@id/btn_time_down"
        app:layout_constraintStart_toEndOf="@+id/btn_time_down"
        app:layout_constraintEnd_toStartOf="@+id/btn_time_up"
        app:layout_constrainedWidth="true"/>

    <ImageButton
        android:id="@+id/btn_time_up"
        style="@style/ParameterButton.Plus"
        android:contentDescription="@string/cd_time_increase"
        app:layout_constraintTop_toTopOf="@id/tv_time_value"
        app:layout_constraintBottom_toBottomOf="@id/tv_time_value"
        app:layout_constraintStart_toEndOf="@+id/tv_time_value"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical"
        android:layout_marginEnd="8dp"/>

    <!-- ===================================================== -->
    <!-- ===    [REFACTORED] Right Side: Keypad            === -->
    <!-- ===================================================== -->

    <!-- All keypad buttons are now managed by this Flow helper -->

    <!-- Keypad Buttons (no layout constraints needed anymore) -->

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_keypad"
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:layout_marginStart="8dp"
        app:constraint_referenced_ids="btn_key_7, btn_key_8, btn_key_9,
                                       btn_key_4, btn_key_5, btn_key_6,
                                       btn_key_1, btn_key_2, btn_key_3,
                                       btn_key_clear, btn_key_0, btn_key_enter"

        app:flow_horizontalStyle="spread_inside"
        app:flow_maxElementsWrap="3"
        app:flow_verticalStyle="spread_inside"
        app:flow_wrapMode="chain"

        app:layout_constraintBottom_toBottomOf="@id/btn_stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_key_7"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="7"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_8"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="8"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_9"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="9"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_4"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="4"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_5"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="5"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_6"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="6"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_1"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="1"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_2"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="2"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_3"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="3"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_0"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:background="@drawable/bg_keypad_yellow"
        android:backgroundTint="@null"
        android:text="0"
        android:textColor="#000000" />
    <Button
        android:id="@+id/btn_key_clear"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:text="C"
        android:background="@drawable/bg_keypad_red"
        android:backgroundTint="@null"
        android:textColor="#FFFFFF" />
    <ImageButton
        android:id="@+id/btn_key_enter"
        style="@style/KeypadButton"
        android:minHeight="48dp"
        android:src="@drawable/ic_return_key_white"
        android:contentDescription="输入"
        app:tint="?attr/colorOnSurface"
        android:scaleType="fitCenter"
        android:background="@drawable/bg_keypad_green"
        android:backgroundTint="@null"
        android:tint="#FFFFFF" />

    <Button
        android:id="@+id/btn_soft_resume_inline"
        style="@style/KeypadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/soft_resume"
        android:background="@drawable/bg_keypad_green"
        android:backgroundTint="@null"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/flow_keypad" />

    <!-- ===================================================== -->
    <!-- ===         Bottom: Functional Buttons            === -->
    <!-- ===================================================== -->
    <Button
        android:id="@+id/btn_start_stop"
        style="@style/NoTintButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_yellow"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:minHeight="48dp"
        android:text="开始"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/btn_stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_time_down"
        app:layout_constraintWidth_min="120dp" />

    <Button
        android:id="@+id/btn_stop"
        style="@style/NoTintButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_red"
        android:minHeight="48dp"
        android:text="@string/button_stop"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical"
        app:layout_constraintStart_toEndOf="@+id/btn_start_stop"
        app:layout_constraintTop_toBottomOf="@+id/btn_time_up"
        app:layout_constraintWidth_min="120dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_soft_panel_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="94dp" />

    <LinearLayout
        android:id="@+id/layout_soft_panel_expanded"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/darker_gray"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_soft_panel_top">

        <Button
            android:id="@+id/btn_soft_stop_expanded"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/soft_stop" />

        <Space
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_soft_resume_expanded"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/soft_resume" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_soft_panel_collapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_soft_stop_collapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soft_stop" />

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_soft_resume_collapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soft_resume" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
