<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="选择字段"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_preset_mode_button_default"
        android:gravity="center"
        android:padding="8dp"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_key_7"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:text="7"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_key_8"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:text="8"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_key_9"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:text="9"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_key_4"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:text="4"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_key_5"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:text="5"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_key_6"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:text="6"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_key_1"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:text="1"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_key_2"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:text="2"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_key_3"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:text="3"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_key_clear"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:text="C"
            android:background="@drawable/bg_keypad_red"
            android:backgroundTint="@null"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_key_0"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:text="0"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/btn_key_enter"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:src="@drawable/ic_return_key_white"
            android:contentDescription="输入"
            android:scaleType="fitCenter"
            android:background="@drawable/bg_keypad_green"
            android:backgroundTint="@null"
            app:tint="#FFFFFF" />
    </GridLayout>
</LinearLayout>
