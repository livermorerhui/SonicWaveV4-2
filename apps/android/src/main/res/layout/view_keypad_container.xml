<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_keypad_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_keypad_container_gray"
    android:padding="12dp"
    android:visibility="gone"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:layout_constraintTop_toBottomOf="@id/card_manual_params"
    app:layout_constraintEnd_toEndOf="@id/card_manual_params">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp" >

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_keypad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="btn_key_7, btn_key_8, btn_key_9,
                                           btn_key_4, btn_key_5, btn_key_6,
                                           btn_key_1, btn_key_2, btn_key_3,
                                           btn_key_clear, btn_key_0, btn_key_enter"
            app:flow_horizontalGap="8dp"
            app:flow_horizontalStyle="spread_inside"
            app:flow_maxElementsWrap="3"
            app:flow_verticalGap="8dp"
            app:flow_verticalStyle="spread_inside"
            app:flow_wrapMode="chain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_key_7"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="7"
            android:textColor="#000000"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_key_8"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="8"
            android:textColor="#000000"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_key_9"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="9"
            android:textColor="#000000"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_key_4"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="4"
            android:textColor="#000000"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_key_5"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="5"
            android:textColor="#000000"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_key_6"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="6"
            android:textColor="#000000"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_key_1"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="1"
            android:textColor="#000000"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_key_2"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="2"
            android:textColor="#000000"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_key_3"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="3"
            android:textColor="#000000"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_key_0"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_yellow"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="0"
            android:textColor="#000000"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_key_clear"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_red"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="C"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btn_key_enter"
            style="@style/KeypadButton"
            android:background="@drawable/bg_keypad_green"
            android:backgroundTint="@null"
            android:contentDescription="输入"
            android:minHeight="48dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_return_key_white"
            android:visibility="gone"
            app:tint="#FFFFFF"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_soft_resume_inline"
            style="@style/KeypadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_keypad_green"
            android:backgroundTint="@null"
            android:text="@string/soft_resume"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flow_keypad" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
