<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/preset_mode_button_selected"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/preset_mode_button_disabled"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/preset_mode_button_border"/>
            <solid android:color="@color/preset_mode_button_default"/>
        </shape>
    </item>
</selector>
