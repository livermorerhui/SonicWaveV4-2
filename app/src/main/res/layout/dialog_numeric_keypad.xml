<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="关闭"
            android:src="@drawable/ic_close_dialog" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="8dp">

        <Button android:id="@+id/btn_key_7" style="@style/KeypadButton" android:minHeight="48dp" android:text="7" />
        <Button android:id="@+id/btn_key_8" style="@style/KeypadButton" android:minHeight="48dp" android:text="8" />
        <Button android:id="@+id/btn_key_9" style="@style/KeypadButton" android:minHeight="48dp" android:text="9" />
        <Button android:id="@+id/btn_key_4" style="@style/KeypadButton" android:minHeight="48dp" android:text="4" />
        <Button android:id="@+id/btn_key_5" style="@style/KeypadButton" android:minHeight="48dp" android:text="5" />
        <Button android:id="@+id/btn_key_6" style="@style/KeypadButton" android:minHeight="48dp" android:text="6" />
        <Button android:id="@+id/btn_key_1" style="@style/KeypadButton" android:minHeight="48dp" android:text="1" />
        <Button android:id="@+id/btn_key_2" style="@style/KeypadButton" android:minHeight="48dp" android:text="2" />
        <Button android:id="@+id/btn_key_3" style="@style/KeypadButton" android:minHeight="48dp" android:text="3" />
        <Button android:id="@+id/btn_key_clear" style="@style/KeypadButton" android:minHeight="48dp" android:text="C" />
        <Button android:id="@+id/btn_key_0" style="@style/KeypadButton" android:minHeight="48dp" android:text="0" />
        <ImageButton
            android:id="@+id/btn_key_enter"
            style="@style/KeypadButton"
            android:minHeight="48dp"
            android:src="@drawable/ic_return_key_white"
            android:contentDescription="输入"
            android:scaleType="fitCenter" />
    </GridLayout>

</LinearLayout>
