<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- 顶部工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#01E4BA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar" />

    <!-- 主要内容布局 Main Content Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- === 区域分割线 Guidelines === -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_divider_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_divider_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <!-- === 左侧栏布局 === -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/inner_nav_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="1220dp" />


        <!-- === 左上角区域 === -->
            <!-- === 左侧栏上部分 === -->
        <LinearLayout
            android:id="@+id/nav_rail_top_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:background="?attr/colorSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_divider_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/inner_nav_guideline">
        </LinearLayout>

            <!-- === 左上角区域：自选、预定设置 === -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment_activity_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@id/horizontal_divider_guideline"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintStart_toEndOf="@+id/inner_nav_guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/mobile_navigation" />

        <!-- === 左下角区域 === -->
            <!-- === 左侧栏下部分 === -->
        <LinearLayout
            android:id="@+id/nav_rail_bottom_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:background="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_divider_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/inner_nav_guideline">
        </LinearLayout>

            <!-- === 左下角区域：音乐 === -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_bottom_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFF8E1"
            app:layout_constraintTop_toBottomOf="@id/horizontal_divider_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/inner_nav_guideline"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/music_vertical_split"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />

            <View
                android:id="@+id/music_vertical_divider"
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:background="#FFFAD2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/music_vertical_split"
                app:layout_constraintEnd_toEndOf="@id/music_vertical_split" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/music_playlist_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/music_vertical_split">

                <TextView
                    android:id="@+id/music_playlist_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/playlist_title"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/download_music_button" />

                <ImageButton
                    android:id="@+id/download_music_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/download"
                    android:src="@drawable/ic_download_outline"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/music_list_recyclerview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/music_playlist_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/item_music_track" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/music_player_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@id/music_vertical_split"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/vinyl_disc_view"
                    android:layout_width="143dp"
                    android:layout_height="143dp"
                    android:layout_marginBottom="24dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/cd_vinyl_disc"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_vinyl_disc"
                    app:layout_constraintBottom_toTopOf="@id/music_player_controls"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.821" />

                <LinearLayout
                    android:id="@+id/playback_progress_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toTopOf="@id/music_player_controls"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <SeekBar
                        android:id="@+id/playback_seekbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/playback_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/remaining_time_format_placeholder"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/music_player_controls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageButton
                        android:id="@+id/prev_button"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/previous"
                        android:src="@android:drawable/ic_media_previous" />

                    <ImageButton
                        android:id="@+id/play_pause_button"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/play_pause"
                        android:src="@android:drawable/ic_media_play" />

                    <ImageButton
                        android:id="@+id/next_button"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/next"
                        android:src="@android:drawable/ic_media_next" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/tonearm_view"
                    android:layout_width="25dp"
                    android:layout_height="116.54dp"
                    android:layout_marginStart="124dp"
                    android:layout_marginBottom="24dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/cd_tonearm"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_tonearm"
                    app:layout_constraintBottom_toBottomOf="@+id/vinyl_disc_view"
                    app:layout_constraintStart_toStartOf="@+id/vinyl_disc_view"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- === 右区域：登录 === -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_right_main"
            android:name="com.example.sonicwavev4.ui.login.LoginFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/vertical_divider_guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 固定分隔线：垂直灰线 -->
        <View
            android:id="@+id/vertical_divider"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintEnd_toEndOf="@id/vertical_divider_guideline" />

        <!-- 固定分隔线：水平灰线 -->
        <View
            android:id="@+id/horizontal_divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/inner_nav_guideline"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintTop_toTopOf="@id/horizontal_divider_guideline"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_divider_guideline" />

        <!-- 左侧竖向分隔线 -->
        <View
            android:id="@+id/left_vertical_divider"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/inner_nav_guideline"
            app:layout_constraintEnd_toEndOf="@id/inner_nav_guideline" />

        <!-- 左侧水平分隔线 -->
        <View
            android:id="@+id/left_horizontal_divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/inner_nav_guideline"
            app:layout_constraintTop_toTopOf="@id/horizontal_divider_guideline"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_divider_guideline" />

        <!-- 左侧顶部水平线 -->
        <!-- 左侧底部水平线 -->
        <View
            android:id="@+id/left_bottom_horizontal_divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/inner_nav_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_rail_bottom_section" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
