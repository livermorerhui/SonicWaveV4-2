<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- 顶部工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar" />

    <!-- 主要内容布局 Main Content Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- === 区域分割线 Guidelines === -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_divider_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.61" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_divider_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <!-- === 左侧栏布局 === -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/inner_nav_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="60dp" />


        <!-- === 左上角区域 === -->
            <!-- === 左侧栏上部分 === -->
        <LinearLayout
            android:id="@+id/nav_rail_top_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:background="?attr/colorSurface"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_divider_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/inner_nav_guideline">
        </LinearLayout>

            <!-- === 左上角区域：自选、预定设置 === -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment_activity_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@id/horizontal_divider_guideline"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintStart_toEndOf="@+id/inner_nav_guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/mobile_navigation" />

        <!-- === 左下角区域 === -->
            <!-- === 左侧栏下部分 === -->
        <LinearLayout
            android:id="@+id/nav_rail_bottom_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:background="?attr/colorSurface"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_divider_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/inner_nav_guideline">
        </LinearLayout>

            <!-- === 左下角区域：音乐 === -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_bottom_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFECB3"
            app:layout_constraintTop_toBottomOf="@id/horizontal_divider_guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/inner_nav_guideline"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/music_list_recyclerview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingEnd="56dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/play_button"
                tools:listitem="@layout/item_music_track" /> <!-- Placeholder for list item layout -->

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/ic_media_play"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play Music"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- === 右区域：仪表状态 === -->
        <FrameLayout
            android:id="@+id/fragment_right_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#C8E6C9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/vertical_divider_guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- === 垂直拖动手柄 === -->
        <View
            android:id="@+id/vertical_drag_handle"
            android:layout_width="16dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintEnd_toEndOf="@id/vertical_divider_guideline" />

        <!-- === 水平拖动手柄 === -->
        <View
            android:id="@+id/horizontal_drag_handle"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="@id/horizontal_divider_guideline"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_divider_guideline"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintStart_toEndOf="@id/inner_nav_guideline" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>