<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- 左侧固定导航栏 -->
    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/nav_rail_view"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        app:headerLayout="@layout/nav_header_main"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395"
        app:menu="@menu/nav_rail_menu" />

    <!-- 主内容区域：Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="0dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/nav_rail_view"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar" />

    <!-- 核心变化区域：使用 ConstraintLayout 实现可拖动分割线 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/nav_rail_view"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!-- 垂直分割线：将左右区域分开 -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_divider_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.61" /> <!-- 初始位置：左侧占40% -->

        <!-- 水平分割线：将左侧上下区域分开 -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_divider_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" /> <!-- 初始位置：左上占50% -->

        <!-- 左上角区域: NavHostFragment -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment_activity_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/horizontal_divider_guideline"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/mobile_navigation" />

        <!-- 左下角区域: 占位符或另一个 Fragment/View -->
        <FrameLayout
            android:id="@+id/fragment_bottom_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFECB3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontal_divider_guideline">
            <!-- 内部内容可滚动示例 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left Bottom Area (Scrollable Content)\n\n"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:padding="16dp"
                    android:ellipsize="end"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:lineSpacingExtra="4dp"
                    tools:text="@string/long_text_placeholder"/> <!-- 占位符长文本 -->
            </ScrollView>
        </FrameLayout>

        <!-- 右侧一整块区域: 占位符或另一个 Fragment/View -->
        <FrameLayout
            android:id="@+id/fragment_right_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#C8E6C9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/vertical_divider_guideline"
            app:layout_constraintTop_toTopOf="parent">
            <!-- 内部内容可滚动示例 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6dp"
                    android:padding="16dp"
                    android:text="Right Main Area (Scrollable Content)\n\n"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="@string/long_text_placeholder_big" /> <!-- 占位符长文本 -->
            </ScrollView>
        </FrameLayout>

        <!-- 垂直拖动把手 (覆盖在 vertical_divider_guideline 上) -->
        <View
            android:id="@+id/vertical_drag_handle"
            android:layout_width="16dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/vertical_divider_guideline"
            app:layout_constraintEnd_toEndOf="@id/vertical_divider_guideline" />

        <!-- 水平拖动把手 (覆盖在 horizontal_divider_guideline 上) -->
        <View
            android:id="@+id/horizontal_drag_handle"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_divider_guideline"
            app:layout_constraintTop_toTopOf="@id/horizontal_divider_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertical_divider_guideline" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>